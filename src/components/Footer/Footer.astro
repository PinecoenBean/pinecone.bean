---
import IconLink from '@components/Link/IconLink.astro'

const currentYear = new Date().getFullYear()
---

<footer class="mt-auto">
  <hr class="border-border-base" />
  <div
    class="my-4 flex flex-col items-center justify-between sm:flex-row-reverse"
  >
    <div class="flex-wrap justify-center gap-2">
      <IconLink
        fromColor="yellow"
        toColor="yellow"
        iconClass="fa-brands fa-github"
        href="https://github.com/pineconebean"
      >
        Github
      </IconLink>
      <IconLink
        fromColor="blue"
        toColor="blue"
        iconClass="fa-solid fa-envelope"
        href="mailto:liaojd98@gmail.com"
      >
        Mail
      </IconLink>
    </div>
    <div class="flex flex-col items-center whitespace-nowrap sm:flex-row">
      <span>Copyright &#169; {currentYear}</span>
      <span class="hidden sm:inline">&nbsp;|&nbsp;</span>
      <span>All rights reserved.</span>
    </div>
  </div>
</footer>

<style>
  .gradient-link {
    position: relative;
    box-decoration-break: clone;
    text-decoration: none;
  }

  .gradient-link:hover:after {
    transform: translateZ(0) scale(1);
  }

  .gradient-link:after {
    left: 0;
    right: 0;
    bottom: -2px;
    content: '';
    height: 2px;
    position: absolute;
    transform: translateZ(0) scaleX(0);
    transform-origin: left center;
    transition: all 0.15s ease-in-out;
  }
</style>
