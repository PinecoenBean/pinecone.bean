---
import HeaderLinks from './HeaderLinks.astro'
---

<nav class="hidden text-text-bold md:inline">
  <ul class="unset flex gap-4 [&>li]:p-0">
    <HeaderLinks />
  </ul>
</nav>
<nav class="md:hidden">
  <button id="mobile-menu-open">
    <i class="fa-solid fa-bars" aria-hidden="true" title="Open mobile menu"></i>
    <span class="fa-sr-only">Open mobile menu</span>
  </button>
  <section
    id="mobile-menu"
    class="hide-menu fixed top-0 left-0 z-10 h-full w-full bg-black/75 transition-transform"
  >
    <div class="h-full w-[75%] bg-white drop-shadow-2xl">
      <button id="mobile-menu-close" class="h-[5rem] px-6 text-lg">
        <i
          class="fa-solid fa-xmark"
          aria-hidden="true"
          title="Close mobile menu"></i>
        <span class="fa-sr-only">Close mobile menu</span>
      </button>
      <ul
        class="unset mx-6 flex flex-col gap-2 border-l border-slate-100 text-text-bold dark:border-slate-800 [&>li]:p-0"
      >
        <HeaderLinks class="block" sideLink />
      </ul>
    </div>
  </section>
</nav>

<script>
  document.querySelector('#mobile-menu-open')!.addEventListener('click', () => {
    const menuElem = document.querySelector('#mobile-menu')
    menuElem!.classList.remove('hide-menu')
    menuElem!.classList.add('show-menu')
    document.body.style.overflow = 'hidden'
  })

  document
    .querySelector('#mobile-menu-close')!
    .addEventListener('click', () => {
      const menuElem = document.querySelector('#mobile-menu')
      menuElem!.classList.remove('show-menu')
      menuElem!.classList.add('hide-menu')
      document.body.style.overflow = 'auto'
    })
</script>

<style>
  .hide-menu {
    transform: translateX(-100%);
  }
  .show-menu {
    transform: translateX(0%);
  }
</style>
